<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Color de fondo cuando estÃ¡ seleccionado -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="#3700B3" /> <!-- Borde -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo por defecto -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="#6200EE" /> <!-- Borde -->
        </shape>
    </item>
</selector>