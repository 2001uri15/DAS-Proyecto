<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente -->
        </shape>
    </item>
    <item android:top="-100dp" android:right="-100dp" android:left="-100dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente -->
            <stroke android:width="2dp" android:color="#FF0000" /> <!-- Borde rojo solo en la parte inferior -->
        </shape>
    </item>
</layer-list>