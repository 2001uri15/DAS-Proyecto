<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <!-- Color de las estrellas seleccionadas (activas) -->
        <item name="colorControlActivated">#FFD700</item> <!-- Dorado -->
        <!-- Color de las estrellas no seleccionadas (inactivas) -->
        <item name="colorControlNormal">#CCCCCC</item>    <!-- Gris claro -->
        <!-- Color del borde de las estrellas -->
        <item name="colorControlHighlight">#FFA500</item> <!-- Naranja -->
    </style>

    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Cambia el color primario (azul por defecto) -->
        <item name="colorPrimary">@color/white</item>
        <!-- Cambia el color de fondo del diálogo -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Cambia el color del texto -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Widget.DAS_APP.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.DAS_APP.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyCircularProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/custom_circular_progress</item>
        <!-- Tamaño del ProgressBar -->
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
</resources>