<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DAS_APP" parent="Theme.Material3.Light.NoActionBar">
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Color del texto/iconos de la barra de estado (claro u oscuro) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.DAS_APP" parent="Base.Theme.DAS_APP" />

    <style name="Theme.DAS_APP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DAS_APP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DAS_APP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>