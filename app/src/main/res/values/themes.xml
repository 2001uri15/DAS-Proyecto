<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.DAS_APP" parent="Theme.Material3.Light.NoActionBar">
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Forzar colores para botones -->
        <item name="colorPrimary">@color/icon</item>
        <item name="colorPrimaryContainer">@color/duracion</item>
        <item name="colorSurface">@color/duracion</item>

        <!-- Asegurar que los botones tomen este color -->
        <item name="buttonStyle">@style/MiBotonPersonalizado</item>
    </style>

    <style name="Theme.DAS_APP" parent="Base.Theme.DAS_APP" />

    <style name="Theme.DAS_APP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DAS_APP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DAS_APP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilo personalizado para los botones -->
    <style name="MiBotonPersonalizado" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/icon</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.DAS_APP.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.DAS_APP.AppWidgetContainer" parent="Theme.DAS_APP.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>
