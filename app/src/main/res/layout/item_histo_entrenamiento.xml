<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen de la actividad -->
        <ImageView
            android:id="@+id/iconoActividad"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_correr" />

        <!-- InformaciÃ³n de la actividad -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/iconoActividad"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correr"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 km"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-10-01"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnBorrar"
            android:layout_width="63dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="7dp"
            android:layout_toEndOf="@+id/linearLayout2"
            app:srcCompat="@drawable/borrar" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>