<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mapa -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_background" />

    <!-- Matriz 2x2 -->
    <GridLayout
        android:id="@+id/gridInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvPaladas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Paladas: 0"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTiempo500m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="500m: 00:00"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDistancia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Distancia: 0m"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTiempo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="Tiempo: 00:00:00"
            android:textSize="18sp"
            android:gravity="center" />
    </GridLayout>

    <!-- Contenedor dinámico para modos específicos -->
    <LinearLayout
        android:id="@+id/containerModoEspecifico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp" />

</LinearLayout>