<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Barra Superior Fija -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-1dp"
        android:background="#E0E0E0"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Â© Asier Larrazabal"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="19dp"
        android:text="@string/idioma" />

    <ListView
        android:id="@+id/listIdioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_background"
        android:choiceMode="singleChoice">

    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="437dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listIdioma"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="21dp"
        android:text="@string/general" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnMetricas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FAF7F7"
            android:text="@string/uniMetri"
            android:textAlignment="textStart"
            android:background="@drawable/boton_transparente"
            android:paddingLeft="10dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />
        <Button
            android:id="@+id/btnNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FAF7F7"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:background="@drawable/boton_transparente"
            android:paddingLeft="10dp"
            android:textAllCaps="false"
            android:text="@string/notifi" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="442dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutButtons"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:text="@string/privacidad" />

    <LinearLayout
        android:id="@+id/layoutButtons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPrivacidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FAF7F7"
            android:text="@string/avisoPriva"
            android:textAlignment="textStart"
            android:background="@drawable/boton_transparente"
            android:paddingLeft="10dp"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />

        <Button
            android:id="@+id/btnPermisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FAF7F7"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:background="@drawable/boton_transparente"
            android:paddingLeft="10dp"
            android:textAllCaps="false"
            android:text="@string/permiso" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider" />

        <Button
            android:id="@+id/btnBorrarDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FAF7F7"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:paddingLeft="10dp"
            android:background="@drawable/boton_transparente"
            android:textAllCaps="false"
            android:text="@string/borrarDatos" />
    </LinearLayout>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutButtons2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textAllCaps="false"
        android:background="@drawable/rounded_background"
        android:text="@string/guardar" />

</RelativeLayout>